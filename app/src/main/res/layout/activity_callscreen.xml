<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".callscreen"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/toolbarbg"
        android:layout_marginTop="1sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:background="#FF5722">
            <ImageView
                android:layout_width="50sp"
                android:layout_height="40sp"
                android:src="@drawable/drawer"
                android:layout_margin="12sp"
                android:id="@+id/lines"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOS INDIA"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="12sp"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="#fff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:text="Which help do you need?"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/kanit"
                android:textColor="#FFFFFF"/>



            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="4"
                android:columnCount="3"
                android:layout_marginLeft="@dimen/_20sdp"

                android:fillViewport="true"
                android:nestedScrollingEnabled="true">

                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:src="@drawable/policeb"
                    android:id="@+id/btn1"
                    android:background="@drawable/btnshape"
                    android:padding="10sp"
                    android:layout_margin="30sp" />

                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_marginBottom="30sp"
                    android:layout_marginTop="30sp"
                    android:layout_marginRight="30sp"
                    android:background="@drawable/btnshape"
                    android:padding="10sp"
                    android:src="@drawable/ambu"
                    android:id="@+id/ambub"/>

                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_marginBottom="30sp"
                    android:layout_marginTop="30sp"
                    android:background="@drawable/btnshape"
                    android:padding="10sp"
                    android:src="@drawable/mahila"
                    android:id="@+id/mahilab"/>

                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:src="@drawable/firebrigade"
                    android:background="@drawable/btnshape"
                    android:padding="10sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginTop="10sp"
                    android:id="@+id/fireb"/>
                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:src="@drawable/cyber"
                    android:background="@drawable/btnshape"
                    android:padding="10sp"
                    android:layout_marginBottom="30sp"
                    android:layout_marginTop="10sp"
                    android:id="@+id/cyber"/>
                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/railway"
                    android:background="@drawable/btnshape"
                    android:padding="10sp"
                    android:id="@+id/railway"/>
                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:src="@drawable/earth"
                    android:background="@drawable/btnshape"
                    android:padding="10sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginTop="10sp"
                    android:id="@+id/disaster"/>
                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_marginBottom="30sp"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/carcrash"
                    android:background="@drawable/btnshape"
                    android:padding="10sp"
                    android:id="@+id/roadaccident"/>
                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_marginBottom="30sp"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/children"
                    android:background="@drawable/btnshape"
                    android:padding="10sp"
                    android:id="@+id/children"/>

            </GridLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="220sp"
                android:layout_height="80sp"
                android:text="call Emergency person"
                android:textSize="20sp"
                android:id="@+id/emergencyb"
                android:layout_marginLeft="80sp"
                android:background="#E61202"
                android:textColor="#fff" />
            <com.google.android.gms.ads.AdView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="20sp"
                android:id="@+id/add"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-3940256099942544/9214589741"
               />
        </LinearLayout>


    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="270sp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:id="@+id/navigation"
        app:menu="@menu/menu"
        app:headerLayout="@layout/header"/>


</androidx.drawerlayout.widget.DrawerLayout>